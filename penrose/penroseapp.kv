<DartScreen>:
    FloatLayout:
        id: float_layout
        #:import TileLayout penrose_tiles
        TileLayout:
            id: tile_layout
            do_scale: True
            # #:import Window kivy.core.window
            # on_size:
            #     size: root.size
        Button:
            id: add_tile
            text: 'Add Tile'
            size: self.size
            size_hint: 0.1,0.1
            pos_hint: {'right': 1.0}
            on_press: root.add_tile()
        Label:
            id: lab_status
            pos_hint: {'left_x': 0.0}
            size_hint: 0.9, 0.1
            text_size: self.size[0],None
            halign: 'left'
            valign: 'top'
            text: 'Hello\nWorld'
            size: self.size
            canvas:
                Color:
                    rgba: [0.5,0,0.5,0.5]
                Rectangle:
                    size: self.size
                    pos: self.pos
