<DartScreen>:
    GridLayout:
        rows: 2
        size_hint: 0.9, 0.1
        id: grid_layout
        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'            
            # Scatter:
            id: scatter_layout
            pos_hint: {'left_x': 0.0}
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'bottom'            
            Button:
                id: add_tile
                text: 'Add Tile'
                size: self.size
                size_hint: 0.1, None
                pos_hint: {'right_x': 1.0}
                on_press: root.add_tile()
                
                # text_size: cm(2), cm(2)
            Label:
                id: lab_status
                # pos_hint: {'left_x': 0.0}
                text_size: self.size[0],None
                halign: 'left'
                valign: 'top'
                text: 'Hello\nWorld'
                size: self.size
                canvas:
                    Color:
                        rgba: [0.5,0,0.5,0.5]
                    Rectangle:
                        size: self.size
                        pos: self.pos
