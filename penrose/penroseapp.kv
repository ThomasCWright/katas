<DartScreen>:
    FloatLayout:
        id: float_layout
        ScatterLayout:
            id: scatter_layout
            # pos_hint: {'top': 1.0}
            # size_hint: 1, 0.9
            do_scale: True
            # canvas:
            #     Color:
            #         rgba: 1,0,0,0.1
            #     Rectangle:
            #         size: self.size
            #         pos: self.pos
        Button:
            id: add_tile
            text: 'Add Tile'
            size: self.size
            size_hint: 0.1,0.1
            pos_hint: {'right': 1.0}
            on_press: root.add_tile()
        Label:
            id: lab_status
            pos_hint: {'left_x': 0.0}
            size_hint: 0.9, 0.1
            text_size: self.size[0],None
            halign: 'left'
            valign: 'top'
            text: 'Hello\nWorld'
            size: self.size
            canvas:
                Color:
                    rgba: [0.5,0,0.5,0.5]
                Rectangle:
                    size: self.size
                    pos: self.pos
